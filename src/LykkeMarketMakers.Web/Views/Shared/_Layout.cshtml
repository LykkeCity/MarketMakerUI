<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lykke Market Makers UI</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/material-fullpalette.css" />
        <link rel="stylesheet" href="~/css/perfect-scrollbar.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/other.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/side-menu.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/monthpicker.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/countries.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/remote-ui.css" asp-append-version="true" />
    </environment>
    <environment names="Release">
        <link rel="stylesheet" href="~/css/styles.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("styles", required: false)
</head>
<body style="overflow-y: hidden">

    @RenderBody()

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-mousewheel/jquery.mousewheel.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/perfect-scrollbar.js" asp-append-version="true"></script>
        <script src="~/js/ui.js" asp-append-version="true"></script>
        <script src="~/js/ModalDialog.js" asp-append-version="true"></script>
        <script src="~/js/Requests.js" asp-append-version="true"></script>
        <script src="~/js/Layout.js" asp-append-version="true"></script>
        <script src="~/js/HistoryManager.js" asp-append-version="true"></script>
        <script src="~/js/MainMenu.js" asp-append-version="true"></script>
    </environment>
    <environment names="Release">
        <script src="~/js/scripts.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        var Ui = new UiDesktop();
        ui = Ui;
        Requests.ui = Ui;
        layout.ui = Ui;
        Requests.pageManager = layout;
        ui.pageManager = layout;
        $(window).resize(function () { layout.ressize(); });
    </script>

    @RenderSection("scripts", required: false)

    <div id="modalBackground" style="margin:auto; z-index: 100; display: none; overflow-y: auto; background: rgba(0, 0, 0, 0.53);position: fixed;top: 0;left: 0;" data-autoheight="0" data-autowidth="0"
         onclick="Ui.hideDialog()">
        <table style="width: 100%; height: 100%;">
            <tr>
                <td id="modalData" style="width: 100%; height: 100%"></td>
            </tr>
        </table>
    </div>
    <script>
        ModalDialog.ui = ui;
    </script>
</body>
</html>
